<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane
        xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="tddtLayout.LayoutMenuController">
   <center>
      <GridPane BorderPane.alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints maxHeight="166.0" minHeight="10.0" prefHeight="49.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="409.0" minHeight="10.0" prefHeight="66.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="466.0" minHeight="10.0" prefHeight="255.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="224.0" minHeight="10.0" prefHeight="132.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <CheckBox mnemonicParsing="false" text="ATTD"
                      GridPane.columnIndex="1" GridPane.rowIndex="1"
                      onAction="#handleATDD">
               <GridPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </GridPane.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </CheckBox>
            <Label text="Bitte Erweiterungen auswählen">
               <GridPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </GridPane.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
            <CheckBox mnemonicParsing="false" text="Babysteps"
                      GridPane.rowIndex="1"
                      onAction="#handleBabystep">
               <GridPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </GridPane.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </CheckBox>
            <GridPane GridPane.rowIndex="2">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints maxHeight="223.0" minHeight="10.0" prefHeight="61.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="423.0" minHeight="10.0" prefHeight="238.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label fx:id="dauerText" text="Bitte Dauer wählen" visible="false">
                     <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </GridPane.margin>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding></Label>
                  <HBox fx:id="timerBox" visible="false" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="1">
                     <children>
                         <fx:define>
                             <ToggleGroup fx:id="babystepTimeGroup"/>
                         </fx:define>
                        <RadioButton fx:id="two" mnemonicParsing="false" text="2"
                                     toggleGroup="$babystepTimeGroup"
                                     onAction="#setTimerToTwo">
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </RadioButton>
                        <RadioButton fx:id="three" mnemonicParsing="false" text="3" selected="true"
                                     toggleGroup="$babystepTimeGroup"
                                     onAction="#setTimerToThree">>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                        </RadioButton>
                        <RadioButton fx:id="four" mnemonicParsing="false" text="4"
                                     toggleGroup="$babystepTimeGroup"
                                     onAction="#setTimerToFour">>
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </RadioButton>
                        <RadioButton fx:id="five" mnemonicParsing="false" text="5"
                                     toggleGroup="$babystepTimeGroup"
                                     onAction="#setTimerToFive">>
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </RadioButton>
                     </children>
                  </HBox>
               </children>
            </GridPane>
            <Label fx:id="errorExercise"
                   GridPane.halignment="LEFT" GridPane.rowIndex="3" GridPane.valignment="CENTER">
               <GridPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </GridPane.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
         </children>
      </GridPane>
   </center>
   <left>
      <VBox fx:id="exerciseBox" prefHeight="505.0" prefWidth="614.0" BorderPane.alignment="CENTER">
         <children>
            <MenuBar fx:id="menuBar">
              <menus>
                <Menu mnemonicParsing="false" text="Aufgaben">
                    <items>
                        <MenuItem text="Anagramm" onAction="#showAnagram"/>
                        <MenuItem text="Array" onAction="#showArray"/>
                        <MenuItem text="Fuhrpark" onAction="#showFuhrpark"/>
                        <MenuItem text="Nullzeile" onAction="#showNullzeile"/>
                        <MenuItem text="Pixel" onAction="#showPixel"/>
                        <MenuItem text="Sortieren" onAction="#showSortieren"/>
                    </items>
                </Menu>
              </menus>
            </MenuBar>
            <Label fx:id="exercise" wrapText="true">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </left>
   <top>
      <StackPane prefHeight="69.0" prefWidth="1280.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER_RIGHT" text="Test Driven Development Trainer">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
         </children>
      </StackPane>
   </top>
   <bottom>
      <GridPane prefHeight="217.0" prefWidth="1280.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button mnemonicParsing="false"
                    onAction="#handleExitButton" text="Exit"
                    GridPane.halignment="RIGHT" GridPane.valignment="CENTER"
                    GridPane.columnIndex="1" GridPane.rowIndex="3">
               <GridPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </GridPane.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Button>
            <Button mnemonicParsing="false"
                    onAction="#handleStartMenuButton" text="Start"
                    GridPane.halignment="LEFT" GridPane.valignment="CENTER"
                    GridPane.columnIndex="0" GridPane.rowIndex="3">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <GridPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </GridPane.margin>
            </Button>
         </children>
      </GridPane>
   </bottom>
</BorderPane>
